{
    "name": "the-minimal-editor",
    "private": true,
    "version": "0.1.2",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint .",
        "ts:check": "tsc --noEmit",
        "a11y": "pa11y http://localhost:5173/ --config a11y/pa11y.json",
        "a11y:modal": "pa11y http://localhost:5173/ --config a11y/pa11y.audit-modal.json",
        "a11y:all": "npm run a11y && npm run a11y:modal",
        "check": "npm run format:check && npm run lint && npm run ts:check"
    },
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^4.5.2",
        "eslint": "^9.29.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.2.0",
        "pa11y": "^9.0.1",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "vite": "^7.2.7"
    }
}
